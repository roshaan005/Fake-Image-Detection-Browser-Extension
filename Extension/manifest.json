{
  "manifest_version": 3,
  "name": "AI Image Detector",
  "version": "1.0.0",
  "description": "Detect AI-generated images on the web using PyTorch and scikit-learn",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*",
    "http://localhost:5001/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "AI Image Detector"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["model/*", "icons/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
